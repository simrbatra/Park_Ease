<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back3"
            android:contentDescription="Back"
            android:layout_gravity="start" />

        <!-- Illustration -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/bg_login_top"
            android:scaleType="fitCenter"
            android:layout_marginTop="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot\npassword"
            android:textColor="#111C3C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your phone number to change your password"
            android:textColor="#69728A"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#111C3C"
            android:textSize="14sp"
            android:layout_marginTop="24dp" />

        <!-- Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text_rounded4"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone3"
                app:tint="#69728A" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="+6289876543210"
                android:inputType="phone"
                android:textColor="#111C3C"
                android:textColorHint="#B0B8D1"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rounded4"
            android:textSize="16sp"
            android:layout_marginTop="32dp" />
    </LinearLayout>
</ScrollView>
